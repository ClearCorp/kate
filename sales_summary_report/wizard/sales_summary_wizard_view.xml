<?xml version="1.0"?>
<odoo>
        <record id="sales_summary_wizard_view_form" model="ir.ui.view">
            <field name="name">sales.summary.wizard.form</field>
            <field name="model">sales.summary.wizard</field>
            <field name="arch" type="xml">
                <form string="Sales Summary Reports">
                    <group>
                        <field name="today"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <footer>
                        <button name="action_print_report" string="Print" type="object" class="btn btn-sm btn-primary"/>
                        <button string="Cancel" class="btn btn-sm btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
 
        <record id="sales_summary_report_action" model="ir.actions.act_window">
            <field name="name">Sales Summary</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sales.summary.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sales_summary_wizard_view_form"/>
            <field name="target">new</field>
        </record>
</odoo>